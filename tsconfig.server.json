{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // CommonJS for module.exports
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["api/**/*.ts", "backend/src/**/*.ts", "src/types/index.ts"],
  "exclude": ["node_modules", "dist", "backend/dist"]
}