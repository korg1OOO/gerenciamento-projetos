{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext", // Match "type": "module" in root package.json
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node", // Resolve Node.js modules
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"] // Provide Node.js types instead of @vercel/node
  },
  "include": ["api/**/*.ts", "backend/src/**/*.ts", "src/types/index.ts"], // Include types file
  "exclude": ["node_modules", "dist", "backend/dist"]
}