{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/src/**",
          "backend/package.json",
          "backend/node_modules/**"
        ]
      }
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/backend/(.*)",
      "dest": "/backend/src/app.ts"
    },
    {
      "src": "/dist/(.*)",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}