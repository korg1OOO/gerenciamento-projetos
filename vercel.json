{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/src/**", "backend/package.json", "backend/node_modules/**", "tsconfig.server.json"]
      }
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/register",
      "dest": "dist/api/auth/register.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "dist/api/auth/login.js"
    },
    {
      "src": "/api/auth/me",
      "dest": "dist/api/auth/me.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}