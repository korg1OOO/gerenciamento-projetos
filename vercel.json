{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/src/**",
          "backend/package.json",
          "backend/node_modules/**"
        ]
      }
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/register",
      "dest": "api/auth/register.ts"
    },
    {
      "src": "/api/auth/login",
      "dest": "api/auth/login.ts"
    },
    {
      "src": "/api/auth/me",
      "dest": "api/auth/me.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}